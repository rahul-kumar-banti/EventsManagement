<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    tools:context=".userCreation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">



        <EditText
            android:id="@+id/guestname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shapemail"
            android:gravity="center"
            android:hint="enter guest name" />
        <EditText
            android:id="@+id/guesAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shapemail"
            android:gravity="center"
            android:hint="enter address" />
        <EditText
            android:id="@+id/guestemail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shapemail"
            android:gravity="center"

            android:hint="enter email" />

        <EditText
            android:id="@+id/guestmobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:inputType="number"
            android:background="@drawable/shapemail"

            android:gravity="center"
            android:hint="enter mobile no" />


        <EditText
            android:id="@+id/guestcompany"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"

            android:layout_marginBottom="5dp"
            android:background="@drawable/shapemail"
            android:gravity="center"
            android:hint="enter company name" />

        <EditText
            android:id="@+id/guestdesignation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"

            android:layout_marginBottom="5dp"
            android:background="@drawable/shapemail"
            android:gravity="center"
            android:hint="enter designation" />

        <EditText
            android:id="@+id/guestDescrisption"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"

            android:layout_marginBottom="5dp"
            android:background="@drawable/shapemail"
            android:gravity="center"
            android:hint="small discription" />
        <Button
            android:id="@+id/createGuest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundedcorner"

            android:text="create Guest" />


        <ProgressBar
            android:id="@+id/guestprogressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>